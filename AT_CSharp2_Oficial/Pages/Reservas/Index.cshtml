@page
@model AT_CSharp2_Oficial.Pages.Reservas.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-page="Create">Criar Novo</a>
	<a asp-page="../Simulador/CalcularTotal">Criar Desconto</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Reserva[0].Cliente)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Reserva[0].PacoteTuristico)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Reserva[0].DataReserva)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Reserva)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Cliente.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PacoteTuristico.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataReserva)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Apagar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<a asp-page="../Pacotes/Index">Voltar a página inicial</a>