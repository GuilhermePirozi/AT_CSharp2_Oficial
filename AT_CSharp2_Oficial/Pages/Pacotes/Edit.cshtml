@page
@model AT_CSharp2_Oficial.Pages.Pacotes.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>PacoteTuristico</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="PacoteTuristico.Id" />
			<div class="form-group">
				<label asp-for="PacoteTuristico.Nome" class="control-label"></label>
				<input asp-for="PacoteTuristico.Nome" class="form-control" />
				<span asp-validation-for="PacoteTuristico.Nome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PacoteTuristico.Data" class="control-label"></label>
				<input asp-for="PacoteTuristico.Data" class="form-control" />
				<span asp-validation-for="PacoteTuristico.Data" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PacoteTuristico.Preco" class="control-label"></label>
				<input asp-for="PacoteTuristico.Preco" class="form-control" />
				<span asp-validation-for="PacoteTuristico.Preco" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PacoteTuristico.LimiteParticipantes" class="control-label"></label>
				<input asp-for="PacoteTuristico.LimiteParticipantes" class="form-control" />
				<span asp-validation-for="PacoteTuristico.LimiteParticipantes" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Voltar a lista</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
