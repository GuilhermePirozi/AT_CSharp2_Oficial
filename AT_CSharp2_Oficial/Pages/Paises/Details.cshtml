@page "{id:int}"
@model AT_CSharp2_Oficial.Pages.Paises.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
	<h4>PaisDestino</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PaisDestino.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PaisDestino.Nome)
		</dd>
		<dt class="col-sm-2">Cidades</dt>
		<dd class="col-sm-10">
			@if (Model.PaisDestino.Cidades != null && Model.PaisDestino.Cidades.Any())
			{
				<ul>
					@foreach (var cidade in Model.PaisDestino.Cidades)
					{
						<li>@cidade.Nome</li>
					}
				</ul>
			}
			else
			{
				<p>Este país ainda não possui cidades cadastradas.</p>
			}
		</dd>
	</dl>
</div>
<div>
	<a asp-page="./Edit" asp-route-id="@Model.PaisDestino.Id">Edit</a> |
	<a asp-page="./Index">Voltar a lista</a>
</div>
